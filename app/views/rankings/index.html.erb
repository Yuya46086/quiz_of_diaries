<h1>クイズスコアランキング</h1>
<table class="ranking-table">
  <thead>
    <tr>
      <th>順位</th>
      <th>ユーザー名</th>
      <th>合計スコア</th>
    </tr>
  </thead>
  <tbody>
    <%= @users.each_with_index do |user, index| %>
      <tr class="<%= 'current-user-row' if user == current_user %>">
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.total_score %>点</td>
      </tr>
    <% end %>
  </tbody>
</table>